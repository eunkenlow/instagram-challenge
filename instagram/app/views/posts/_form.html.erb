<%= form_for :post, url: posts_path do |f| %>

  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image, required: true %>
  </p>

  <p>
    <%= f.label :caption %><br>
    <%= f.text_field :caption %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
